<%= render 'shared/errors', obj: @user %>
<div class="container">
  <div class="col-md-4 well">
    <h3> Register: </h3>
    <hr/>

    <%= form_for @user do |f| %>
      <%= f.label :username %>:
      <%= f.text_field :username %>
      <br/>
      <%= f.label :password %>:
      <%= f.password_field :password %>
      <br/>
      <%= f.submit "Register" %>
    <% end %>
  </div>
</div>