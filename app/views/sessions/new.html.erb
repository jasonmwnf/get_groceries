<%= render "/layouts/flash_messages" %>
<div class="container">
  <div class="col-md-4 well">
    <h3> Login: </h3>
    <hr/>
    <%= form_tag '/login', method: 'post' do %>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
      <br/>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br/>
      <%= submit_tag 'Login' %>
    <% end %>
  </div>
</div>